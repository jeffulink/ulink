<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @order.name %></td>
        <td><%= @order.phone %></td>
        <td><%= @order.description %></td>
      </tr>
  </tbody>
</table>
<hr>

<%= form_for([@order, @comment]) do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if logged_in? %>
<%= link_to 'Edit', edit_order_path(@order) %> |
<% end %>
<%= link_to 'Back', orders_path %>




<%= form_for(@product, @comment) do |f| %>
   <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>






<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

