<p id="notice"><%= notice %></p>



<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>category_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @product.name %></td>
        <td><%= @product.category_id %></td>
      </tr>
  </tbody>
</table>

<% if @product.logo.exists? %>

  <%= image_tag( @product.logo.url(:medium) ) %>
  <%= image_tag( @product.logo.url(:medium) ) %>
<% else %>
  None
<% end %>

<% @comments.each do |comment| %>
  <div class="row well">
    <p>
      <%= comment.content %>
    </p>
    <p>
      留言者：<%= comment.user.name %>
    </p>
    </div>
<%end%>

<%= form_for([@product, @comment]) do |f| %>
   <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-info' %> |
<%= link_to 'Back', products_path, class: 'btn btn-success' %>